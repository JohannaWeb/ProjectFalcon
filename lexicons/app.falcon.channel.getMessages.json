{
  "lexicon": 1,
  "id": "app.falcon.channel.getMessages",
  "description": "Get messages in a channel. Caller must be a member. Ordered by createdAt desc.",
  "defs": {
    "main": {
      "type": "query",
      "description": "Returns messages for the channel.",
      "parameters": {
        "type": "params",
        "required": ["channelId"],
        "properties": {
          "channelId": { "type": "integer", "description": "Channel id." },
          "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 50, "description": "Max messages to return." }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "array",
          "items": { "type": "ref", "ref": "app.falcon.defs#messageView" }
        }
      },
      "errors": [{ "name": "NotFound" }, { "name": "Forbidden" }]
    }
  }
}
