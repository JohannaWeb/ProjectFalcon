{
  "lexicon": 1,
  "id": "app.falcon.channel.list",
  "description": "List channels in a server. Caller must be a member.",
  "defs": {
    "main": {
      "type": "query",
      "description": "Returns channels for the given server.",
      "parameters": {
        "type": "params",
        "required": ["serverId"],
        "properties": {
          "serverId": { "type": "integer", "description": "Server id." }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "array",
          "items": { "type": "ref", "ref": "app.falcon.defs#channelView" }
        }
      },
      "errors": [{ "name": "NotFound" }, { "name": "Forbidden" }]
    }
  }
}
