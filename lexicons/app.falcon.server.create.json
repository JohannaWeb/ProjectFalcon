{
  "lexicon": 1,
  "id": "app.falcon.server.create",
  "description": "Create a new server. Caller becomes owner and a default #general channel is created.",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Create server.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "maxLength": 256, "description": "Server name. Defaults to 'New Server'." }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["id", "name", "ownerDid", "channelId"],
          "properties": {
            "id": { "type": "integer" },
            "name": { "type": "string" },
            "ownerDid": { "type": "string", "format": "did" },
            "channelId": { "type": "integer", "description": "Id of the default #general channel." }
          }
        }
      },
      "errors": [{ "name": "InvalidRequest" }]
    }
  }
}
