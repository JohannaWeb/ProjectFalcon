      "targets": [
        {
          "expr": "up{job=\"siv-service\"}",
          "legendFormat": "SIV",
          "datasource": "Prometheus"
        }
      ],
      "title": "SIV Service",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "title": "HTTP Throughput",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 10,
      "options": { "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"falcon-gateway\"}[2m])) by (uri, status)",
          "legendFormat": "gateway {{uri}} {{status}}",
          "datasource": "Prometheus"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"trust-service\"}[2m])) by (uri, status)",
          "legendFormat": "trust {{uri}} {{status}}",
          "datasource": "Prometheus"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"siv-service\"}[2m])) by (uri, status)",
          "legendFormat": "siv {{uri}} {{status}}",
          "datasource": "Prometheus"
        }
      ],
      "title": "Requests/sec by Service",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "lineWidth": 2 }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 11,
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket[2m])) by (le, job))",
          "legendFormat": "p99 {{job}}",
          "datasource": "Prometheus"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_server_requests_seconds_bucket[2m])) by (le, job))",
          "legendFormat": "p50 {{job}}",
          "datasource": "Prometheus"
        }
      ],
      "title": "Latency p50 / p99",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102,
      "title": "JVM",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "bytes", "custom": { "lineWidth": 2, "fillOpacity": 8 } }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "id": 20,
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\",job=~\"$service\"}",
          "legendFormat": "{{job}} heap used",
          "datasource": "Prometheus"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\",job=~\"$service\"}",
          "legendFormat": "{{job}} heap max",
          "datasource": "Prometheus"
        }
      ],
      "title": "Heap Memory",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "short", "custom": { "lineWidth": 2 } }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 21,
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=~\"$service\"}",
          "legendFormat": "{{job}} live threads",
          "datasource": "Prometheus"
        },
        {
          "expr": "jvm_threads_peak_threads{job=~\"$service\"}",
          "legendFormat": "{{job}} peak threads",
          "datasource": "Prometheus"
        }
      ],
      "title": "JVM Threads (Virtual + Platform)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": { "unit": "short", "custom": { "lineWidth": 2, "fillOpacity": 8 } }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 23 },
      "id": 22,
      "targets": [
        {
          "expr": "increase(jvm_gc_pause_seconds_count[5m])",
          "legendFormat": "{{job}} GC pauses / 5m",
          "datasource": "Prometheus"
        }
      ],
      "title": "GC Pauses",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 },
      "id": 103,
      "title": "Logs",
      "type": "row"
    },
    {
      "datasource": "Loki",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 32 },
